---
import type { Playlist } from "../lib/data";
interface Props{
    playlist:Playlist;
}
const {playlist} = Astro.props;
const {id, albumId , title , cover , artists , color} = playlist;

const articsString = artists.join(", ")

---

<a
href={`/playlist/${id}`}
class="playlist-item flex relative p-2 overflow-hidden items-center gap-4 hover:bg-zinc-800"

>
<picture class="h-12 w-12 flex-none">
    <img src={cover} alt={`cover of ${title} by ${articsString}`}
    class="object-cover w-full h-full rounded-md">
</picture>
<div class="flex flex-auto flex-col truncate">
<h4 class="text-white text-sm  ">
{title}
</h4>
<span class="text-gray-400 text-xs">
    {articsString}
</span>
</div>
</a>